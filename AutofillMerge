function onOpen() {
  const ui = SpreadsheetApp.getUi();
  const menu = ui.createMenu('AutoFill Docs');
  menu.addItem('Create New Docs', 'createNewGoogleDocs')
  menu.addToUi();

}

function createNewGoogleDocs() {
  //This value should be the id of your document template that we created in the last step
  const googleDocTemplate = DriveApp.getFileById('1oMUR9LCYgOZfTpkX9qeg6-w9sbypF05g4FetZTXqWhU');
  
  //This value should be the id of the folder where you want your completed documents stored
  const destinationFolder = DriveApp.getFolderById('1vH_t_N5ebPzv9_IBb5CEDfrjPrJtguJ8')
  //Here we store the sheet as a variable
  const sheet = SpreadsheetApp
    .getActiveSpreadsheet()
    .getSheetByName('Data')
  
  //Now we get all of the values as a 2D array
  const rows = sheet.getDataRange().getValues();
  
  //Start processing each spreadsheet row
  rows.forEach(function(row, index){
    //Here we check if this row is the headers, if so we skip it
    if (index === 0) return;
    //Here we check if a document has already been generated by looking at 'Document Link', if so we skip it
    if (row[17]) return;
    //Using the row data in a template literal, we make a copy of our template document in our destinationFolder
    const copy = googleDocTemplate.makeCopy(`${row[2]}- Loket Perpanjangan` , destinationFolder)
    //Once we have the copy, we then open it using the DocumentApp
    const doc = DocumentApp.openById(copy.getId())
    //All of the content lives in the body, so we get that for editing
    const body = doc.getBody();
    //In this line we do some friendly date formatting, that may or may not work for you locale
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    const friendlyDate = new Date(row[5]).toLocaleDateString(['ban', 'id'],options);
    const friendlyDate1 = new Date(row[10]).toLocaleDateString(['ban', 'id'],options);
    const friendlyDate2 = new Date(row[11]).toLocaleDateString(['ban', 'id'], options);
    const formattedDate = Utilities.formatDate(new Date(row[12]), "GMT+7", "dd/MM/yyyy");
    
    
    
    //In these lines, we replace our replacement tokens with values from our spreadsheet row
    body.replaceText('{{No}}', row[0]);
    body.replaceText('{{Nomor Kontrak}}', row[1]);
    body.replaceText('{{Nama}}', row[2]);
    body.replaceText('{{Jenis Kelamin}}', row[3]);
    body.replaceText('{{Tempat}}', row[4]);
    body.replaceText('{{Tanggal Lahir}}', friendlyDate);
    body.replaceText('{{NPWP}}', row[6]);
    body.replaceText('{{KTP}}', row[7]);
    body.replaceText('{{Alamat}}', row[8]);
    body.replaceText('{{Telepon}}', row[9]);
    body.replaceText('{{Awal Kontrak}}', friendlyDate1);
    body.replaceText('{{Akhir Kontrak}}', friendlyDate2);
    body.replaceText('{{ttd kontrak}}', formattedDate);
    body.replaceText('{{posisi}}', row[13]);
    body.replaceText('{{unit}}', row[14]);
    body.replaceText('{{terbilang}}', row[15]);
    body.replaceText('{{umur}}', row[16]);
    
    //We make our changes permanent by saving and closing the document
    doc.saveAndClose();
    //Store the url of our new document in a variable
    const url = doc.getUrl();
    //Write that value back to the 'Document Link' column in the spreadsheet. 
    sheet.getRange(index + 1, 18).setValue(url)
    
  })
  
}

